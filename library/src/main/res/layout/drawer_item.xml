<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height_icon_text">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baseline_start"
        android:layout_marginRight="@dimen/baseline_end"
        android:layout_marginStart="@dimen/baseline_start"
        android:layout_marginEnd="@dimen/baseline_end"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/baseline_content"
        android:layout_marginRight="@dimen/baseline_end"
        android:layout_marginStart="@dimen/baseline_content"
        android:layout_marginEnd="@dimen/baseline_end"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:ellipsize="marquee"
            style="@style/TextAppearance.AppCompat.Subhead"/>

        <TextView
            android:id="@+id/textSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:ellipsize="marquee"
            style="@style/TextAppearance.AppCompat.Subhead"/>

    </LinearLayout>

</RelativeLayout>